<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Revision</title>
    <!-- <link rel="stylesheet" href="../public/styles/index.css"> -->
    <link rel="stylesheet" href="/styles/main.css">

</head>
<body>
    <div class="container">
        <h1 class="title">My Blog</h1>

        <!-- <button type="submit" class="addBlog">Add Blog</button> -->
    <a id="addBlog" href="/new">New Post</a>

        <% if (posts && posts.length > 0) { %>
            
            <%posts.forEach(post=>{%>
                <div class="blog blog<%= post.id %>">
                    <h2><%=post.title%> </h2>
                    <p><%=post.content%> </p>
                    
                    <a class="edit" href="/edit/<%= post.id %>">Edit</a>
                    <a class="delete" href="/apis/posts/delete/<%= post.id %>">Delete</a>

                </div>
                <%})%>
        
                
            <%}else {%>
                <p>No post available</p>
            <%} %>

    </div>
</body>
</html>